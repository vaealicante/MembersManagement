@model MembersManagement.Web.ViewModels.MemberViewModel

<div class="container mt-4">
    <div class="card shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
        <div class="card-header bg-dark text-white p-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Member Information</h5>
            @* Added Status Badge here *@
            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                @(Model.IsActive ? "Active" : "Inactive")
            </span>
        </div>

        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="text-muted small text-uppercase fw-bold">Full Name</label>
                    <p class="fs-5">@Model.FirstName @Model.LastName</p>
                </div>
                <div class="col-md-6">
                    <label class="text-muted small text-uppercase fw-bold">Member ID</label>
                    <p class="fs-5 text-secondary">#@Model.MemberID</p>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4">
                    <label class="text-muted small text-uppercase fw-bold">Birth Date</label>
                    <p>@Model.BirthDate.ToString("MMMM dd, yyyy")</p>
                </div>
                @* --- AGE ADDED HERE --- *@
                <div class="col-md-4">
                    <label class="text-muted small text-uppercase fw-bold">Age</label>
                    <p>@Model.Age </p>
                </div>
                <div class="col-md-4">
                    <label class="text-muted small text-uppercase fw-bold">Branch</label>
                    <div><span class="text-dark">@Model.Branch</span></div>
                </div>
            </div>

            <div class="row mb-4 border-top pt-4">
                <div class="col-md-4">
                    <label class="text-muted small text-uppercase fw-bold">Email Address</label>
                    <p>@Model.Email</p>
                </div>
                <div class="col-md-4">
                    <label class="text-muted small text-uppercase fw-bold">Contact Number</label>
                    <p>@Model.ContactNo</p>
                </div>
                @* --- MEMBER SINCE MOVED INSIDE THE ROW --- *@
                <div class="col-md-4">
                    <label class="text-muted small text-uppercase fw-bold">Member Since</label>
                    <p class="mb-0">
                        <i class="bi bi-calendar-check me-1 text-secondary"></i>
                        @Model.CreatedDate.ToString("MMM dd, yyyy")
                    </p>
                </div>
            </div>

            <div class="row border-top pt-4">
                <div class="col-12">
                    <label class="text-muted small text-uppercase fw-bold">Home Address</label>
                    <p class="mb-0">@Model.Address</p>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light p-3 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.MemberID" class="btn btn-warning px-4">Edit Details</a>
        </div>
    </div>
</div>