@model IEnumerable<MembersManagement.Web.ViewModels.MemberViewModel>

@{
    ViewData["Title"] = "Members";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create Member</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Address</th>
            <th>Branch</th>
            <th>Contact Number</th>
            <th>Email Address</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.MemberID</td>
                <td>@m.FirstName</td>
                <td>@m.LastName</td>
                <td>@m.BirthDate.ToString("yyyy-MM-dd")</td>
                <td>@m.Address</td>
                <td>@m.Branch</td>
                <td>@m.ContactNo</td>
                <td>@m.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.MemberID" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@m.MemberID" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this member?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
