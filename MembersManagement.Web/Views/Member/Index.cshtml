@model IEnumerable<MembersManagement.Web.ViewModels.MemberViewModel>

@{
    // Page title
    ViewData["Title"] = "Members";

    // Pagination values passed from controller
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;

    // Current search text (to persist value after submit)
    string searchTerm = ViewBag.SearchTerm;

    // Currently selected branch filter
    string currentBranch = ViewBag.CurrentBranch;

    // List of distinct branches for dropdown
    var branches = ViewBag.Branches as List<string>;
}

<h2>@ViewData["Title"]</h2>

<!-- ================= SUCCESS MESSAGE ================= -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- ================= ERROR MESSAGE ================= -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- ================= SEARCH & FILTER FORM ================= -->
<form method="get" class="row g-6 mb-2">

    <!-- Search by Lastname -->
    <div class="col-md-7">
        <input name="search" 
               class="form-control" 
               placeholder="Search Last Name" 
               value="@searchTerm" 
               style="height:30px; width:300px"/>
    </div>

    <!-- Filter by branch -->
    <div class="col-md-4 d-flex align-items-left">
        <select name="branch"
                class="form-select"
                style="height:30px; width:300px; padding-top:0; padding-bottom:0; display:flex; align-items:center;">
            <option value="">Branches</option>
            @foreach (var b in branches!)
            {
                if (b == currentBranch)
                {
                    <option value="@b" selected>@b</option>
                }
                else
                {
                    <option value="@b">@b</option>
                }
            }
        </select>

        <button type="submit"
                class="btn btn-primary ms-2"
                style="height:30px; padding-top:0; padding-bottom:0;">
            Filter
        </button>
    </div>



   
</form>

<!-- ================= CREATE BTN ================= -->
<p>
    <a asp-action="Create" class="btn btn-primary">Create Member</a>
</p>

<!-- ================= MEMBERS TABLE ================= -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Address</th>
            <th>Contact Number</th>
            <th>Branch</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.MemberID</td>
                <td>@m.FirstName</td>
                <td>@m.LastName</td>
                <td>@m.BirthDate.ToString("yyyy-MM-dd")</td>
                <td>@m.Address</td>       
                <td>@m.ContactNo</td>      
                <td>@m.Branch</td>
                <td>@m.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.MemberID" class="btn btn-warning btn-sm">Edit</a>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" 
                            data-bs-target="#deleteModal" data-member-id="@m.MemberID" 
                            data-member-name="@m.FirstName @m.LastName">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ================= PAGINATION ================= -->
@if (totalPages > 1)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { search = searchTerm, branch = currentBranch, page = currentPage - 1 })">Previous</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { search = searchTerm, branch = currentBranch, page = i })">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { search = searchTerm, branch = currentBranch, page = currentPage + 1 })">Next</a>
            </li>
        </ul>
    </nav>
}

<!-- ================= DELETE CONFIRMATION MODAL ================= -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modal-body-text">Are you sure?</div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="memberIdInput" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger"> Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ================= SCRIPTS ================= -->
@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            // Get data from button attributes
            var memberId = button.getAttribute('data-member-id');
            var memberName = button.getAttribute('data-member-name');

            // Set confirmation message dynamically
            deleteModal.querySelector('#modal-body-text').textContent =
                `Are you sure you want to delete member "${memberName}"?`;

            deleteModal.querySelector('#memberIdInput').value = memberId;
        });
    </script>
}