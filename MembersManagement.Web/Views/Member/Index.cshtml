@using System.Linq
@model IEnumerable<MembersManagement.Web.ViewModels.MemberViewModel>

@{
    ViewData["Title"] = "Members";

    int currentPage = ViewBag.CurrentPage as int? ?? 1;
    int totalPages = ViewBag.TotalPages as int? ?? 1;
    string searchTerm = ViewBag.SearchTerm as string ?? "";
    string currentBranch = ViewBag.CurrentBranch as string ?? "";

    // FIX: Synced with Controller's "BranchesList"
    var branches = ViewBag.BranchesList as List<string> ?? new List<string>();

    int pageSize = ViewBag.PageSize as int? ?? 10;
}

@section Styles {
    <link rel="stylesheet" href="~/css/index/Member.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

<div class="container-fluid">
    <h2 class="my-4">Members List</h2>

    @* SUCCESS MESSAGE *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="success-alert" class="alert-container">
            <div class="alert alert-success shadow-sm border-0">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <div>@TempData["SuccessMessage"]</div>
                </div>
            </div>
        </div>
    }

    @* ACTION BUTTONS *@
    <div class="mb-3 d-flex gap-2">
        <a asp-controller="Member" asp-action="Create" class="btn btn-success btn-sm shadow-sm">
            <i class="bi bi-person-plus-fill"></i> Create New Member
        </a>
        <a asp-controller="Branch" asp-action="Index" class="btn btn-primary btn-sm shadow-sm">
            <i class="bi bi-building-gear"></i> Branches
        </a>
    </div>

    @* FILTER & SEARCH *@
    <div class="card shadow-sm mb-4 filter-container">
        <div class="card-body">
            <form id="filterForm" method="get">
                <input type="hidden" name="page" value="1" />
                <input type="hidden" name="pageSize" value="@pageSize" />

                <div class="d-flex flex-wrap gap-3 align-items-end">
                    <div style="flex:2; min-width:250px;">
                        <label class="small text-muted fw-bold">SEARCH</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                            <input name="search" class="form-control" placeholder="Search Last Name..." value="@searchTerm" />
                        </div>
                    </div>

                    <div style="flex:1; min-width:200px;">
                        <label class="small text-muted fw-bold">BRANCH</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-geo-alt"></i></span>
                            <input name="branch" list="branchOptions" class="form-control" placeholder="Filter Branch..." value="@currentBranch" />
                            <datalist id="branchOptions">
                                @foreach (var b in branches)
                                {
                                    <option value="@b"></option>
                                }
                            </datalist>
                            <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-funnel"></i></button>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Reset</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* TABLE *@
    <div class="table-responsive shadow-sm border rounded">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Birth Date</th>
                    <th>Address</th>
                    <th>Branch</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!(Model?.Any() ?? false))
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-5">
                            <i class="bi bi-search d-block mb-2 fs-3"></i>
                            No members match your criteria.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var m in Model!)
                    {
                        <tr>
                            <td class="fw-bold">@m.MemberID</td>
                            <td>@m.FirstName</td>
                            <td>@m.LastName</td>
                            <td>@(m.BirthDate?.ToString("MM-dd-yyyy") ?? "")</td>
                            <td>@m.Address</td>
                            <td>@m.Branch</td>
                            <td>@m.ContactNo</td>
                            <td>@m.Email</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@m.MemberID" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@m.MemberID" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-list"></i>
                                    </a>
                                    <button class="btn btn-outline-danger btn-sm delete-button"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-member-id="@m.MemberID"
                                            data-member-name="@($"{m.FirstName} {m.LastName}")">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @* PAGINATION *@
    <div class="d-flex justify-content-between align-items-center mt-3 p-2 bg-light border rounded">
        <div>
            @if (totalPages > 1)
            {
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { search = searchTerm, branch = currentBranch, page = currentPage - 1, pageSize })">Previous</a>
                    </li>

                    @for (int i = Math.Max(1, currentPage - 1); i <= Math.Min(totalPages, currentPage + 1); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { search = searchTerm, branch = currentBranch, page = i, pageSize })">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { search = searchTerm, branch = currentBranch, page = currentPage + 1, pageSize })">Next</a>
                    </li>
                </ul>
            }
            else
            {
                <span class="text-muted small">All records displayed</span>
            }
        </div>

        <div class="d-flex align-items-center">
            <span class="me-2 small">Rows:</span>

            <select id="pageSizeSelector"
                    name="pageSize"
                    form="filterForm"
                    class="form-select form-select-sm"
                    style="width: 80px;"
                    value="@pageSize">

                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="0">All</option>

            </select>
        </div>
    </div>
</div>

<!-- =========================
     DELETE MODAL
========================= -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p id="modal-body-text"></p>

                <form id="deleteForm"
                      asp-controller="Member"
                      asp-action="Delete"
                      method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="memberIdInput" name="id" />
                </form>
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary btn-sm"
                        data-bs-dismiss="modal">
                    Cancel
                </button>

                <button type="button"
                        id="confirmDeleteBtn"
                        class="btn btn-danger btn-sm">
                    Confirm Delete
                </button>
            </div>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/MemberIndex.js"></script>