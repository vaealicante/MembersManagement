@model MembersManagement.Web.ViewModels.MemberViewModel

@{
    ViewData["Title"] = "Edit Member";
}
<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header bg-dark text-white py-3">
        <h5 class="card-title mb-0"><i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]</h5>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="MemberID" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label small fw-bold text-uppercase text-muted"></label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label small fw-bold text-uppercase text-muted"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="BirthDate" class="form-label small fw-bold text-uppercase text-muted"></label>
                    <input asp-for="BirthDate" type="date" class="form-control"
                           value="@(Model.BirthDate.HasValue? Model.BirthDate.Value.ToString("yyyy-MM-dd") : "")" />
                    <span asp-validation-for="BirthDate" class="text-danger small"></span>
                </div>

               <div class="mb-4">
    <label asp-for="BranchId" class="form-label small fw-bold text-muted">ASSIGN BRANCH</label>
    <select asp-for="BranchId" class="form-select" 
        asp-items="@(new SelectList(ViewBag.Branches ?? new List<MembersManagement.Domain.DomBranchModule.BranchEntities.Branch>(), "BranchId", "BranchName"))">
    <option value="">-- Select Branch --</option>
</select>
    <span asp-validation-for="BranchId" class="text-danger small"></span>
</div>

                <div class="col-md-6">
                    <label asp-for="ContactNo" class="form-label small fw-bold text-uppercase text-muted"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-telephone text-muted"></i></span>
                        <input asp-for="ContactNo" id="contactInput" class="form-control" placeholder="09XXXXXXXXX" />
                    </div>
                    <span asp-validation-for="ContactNo" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label small fw-bold text-uppercase text-muted"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-envelope text-muted"></i></span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@mail.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Address" class="form-label small fw-bold text-uppercase text-muted"></label>
                    <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter Complete Address"></textarea>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <div class="form-check form-switch mt-2">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch">
                        <label asp-for="IsActive" class="form-check-label fw-bold text-muted">Member Status (Active)</label>
                    </div>
                </div>
            </div>

            <hr class="my-4 text-muted">

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                <button id="btnSaveMember" type="submit" class="btn btn-warning px-3 shadow-sm fw-bold">
                    <i class="bi bi-check2-circle me-2"></i>Update Member
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/MemberEdit.js"></script>
}
